{
  "name": "@hmls/api",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --env-file=../../.env --watch src/index.ts",
    "start": "bun run --env-file=../../.env src/index.ts",
    "db:generate": "bun run --env-file=../../.env drizzle-kit generate",
    "db:migrate": "bun run --env-file=../../.env drizzle-kit migrate",
    "db:push": "bun run --env-file=../../.env drizzle-kit push",
    "db:studio": "bun run --env-file=../../.env drizzle-kit studio",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "build": "bun build src/index.ts --outdir=dist --target=bun"
  },
  "dependencies": {
    "@hmls/shared": "workspace:*",
    "@logtape/logtape": "^1.3.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "postgres": "^3.4.8",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
