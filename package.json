{
  "name": "hmls",
  "version": "0.3.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=hmls-web",
    "dev:api": "deno task --cwd apps/api dev",
    "dev:diagnostic": "deno task --cwd apps/diagnostic-agent dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "version:sync": "bun run scripts/sync-versions.ts",
    "version:check": "bun run scripts/sync-versions.ts --check",
    "release": "bun run scripts/release.ts",
    "db:up": "docker compose up -d postgres"
  },
  "devDependencies": {
    "turbo": "^2.8.3"
  }
}
