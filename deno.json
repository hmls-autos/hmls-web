{
  "workspace": ["./apps/api", "./apps/diagnostic-agent", "./packages/shared"],
  "imports": {
    "@corespeed/zypher": "jsr:@zypher/agent@0.9.5",
    "@zypher/agui": "jsr:@zypher/agui@0.3.0",
    "hono": "npm:hono@^4.11.9",
    "zod": "npm:zod@^4.3.5",
    "stripe": "npm:stripe@^20.3.0",
    "rxjs": "npm:rxjs@^7.8.2",
    "rxjs-for-await": "npm:rxjs-for-await@1.0.0",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "drizzle-orm/postgres-js": "npm:drizzle-orm@^0.45.1/postgres-js",
    "postgres": "npm:postgres@^3.4.8"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false,
    "exclude": ["apps/web/"]
  },
  "lint": {
    "exclude": ["apps/web/"]
  },
  "tasks": {
    "dev:api": "deno task --cwd apps/api dev",
    "dev:diagnostic": "deno task --cwd apps/diagnostic-agent dev",
    "check:api": "deno check apps/api/src/index.ts",
    "check:diagnostic": "deno check apps/diagnostic-agent/src/main.ts",
    "check": "deno task check:api && deno task check:diagnostic",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "db:up": "docker compose up -d postgres"
  },
  "deploy": {
    "org": "spinsirr",
    "app": "hmls-api"
  }
}
